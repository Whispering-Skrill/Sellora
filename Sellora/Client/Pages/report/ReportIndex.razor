@page "/reports/"
@inject HttpClient _client
@inject HttpInterceptorService _interceptor
@implements IDisposable
@inject IJSRuntime js
@attribute [Authorize]

<div class="report-topbar">
    <h2 class="report-title">Reports</h2>
    <a href="/reports/create" class="btn btn-secondary">
        <span class="oi oi-plus" style="margin-top: 5px;"></span>
    </a>
</div>

<div style="border-bottom:solid black 1px; padding-top:3px;">
    @*FOR SPACING*@
</div>

<div style="margin-top: 10px;">
    @if (Reports == null)
    {
        <div class="alert alert-info">Loading Reports...</div>
    }
    else
    {
        @foreach (var report in Reports)
        {
            <div style="background-color: #D5D5D5; border-radius: 7px; display:flex; margin-bottom:10px;">
                <div style="padding-top: 15px; padding-bottom: 0px; flex:1;">
                    <h4 style="margin-left: 16px; font-family:'Microsoft Sans Serif'; font-weight: bold; letter-spacing: 1px;">@report.ReportTitle</h4>
                    <p style="margin-left:16px; margin-bottom:7px; font-size:15px; font-family:'Microsoft Sans Serif'; font-weight:bold; color:#686868;">User 12468 ------- @report.ReportDate.Day / @report.ReportDate.Month / @report.ReportDate.Year</p>
                    <p style="margin-left:16px; font-family:'Microsoft Sans Serif';">@report.ReportContent</p>
                </div>
                <div style="padding:15px; display: block;">
                    <div style="padding-left:10px; padding-right:10px;">
                        <a href="/reports/view/@report.Id" class="btn btn-primary">
                            More Details
                        </a>
                    </div>
                    <div style="padding:10px; display:flex; justify-content:space-between;">
                        <a href="/reports/edit/@report.Id" class="btn btn-warning" style="width:100%; margin-right:5px;">
                            <span class="oi oi-pencil"></span>
                        </a>
                        <button class="btn btn-danger" style="width:100%; margin-left:5px;" @onclick="@(()=>Delete(report.Id))">
                            <span class="oi oi-delete"></span>
                        </button>
                    </div>
                </div>
            </div>
        }
